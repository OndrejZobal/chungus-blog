<h2>Compose a new article</h2>
<form action="<%= action %>" method="post">
    <h3>Title: </h3><input name="title" type="text" width="100" value="<%= title %>"><br>
    <h3>Abstract:</h3> <textarea name="abstract" type="text" rows="4" cols="40" ><%= abstract %></textarea><br>
    <h3>Article: </h3><textarea name="article" type="text" rows="4" cols="70" ><%= article %></textarea><br>
    <br>
    <input name="publish" type="submit" value="Publikovat">
    <input name="delete" type="submit" value="Smazat">
    <p><%= status %></p>
</form>
